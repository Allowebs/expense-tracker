generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Changed from "mongodb" to "postgresql"
  url      = env("DATABASE_URL")
}

model Source {
  id          String        @id @default(uuid()) // Changed from @default(auto()) @map("_id") @db.ObjectId
  name        String
  type        String
  Transaction Transaction[] // Relation to Transaction is maintained, no changes needed.
}

model Transaction {
  id        String   @id @default(uuid()) // Adjusted for PostgreSQL with UUIDs.
  sourceId  String // Reference to Source ID. In PostgreSQL, this can be a UUID.
  createdAt DateTime @default(now()) // No change, as DateTime maps well to PostgreSQL.
  source    Source   @relation(fields: [sourceId], references: [id]) // Relation definition remains the same.
  amount    Int // No change needed, directly supported in PostgreSQL.
  received  Boolean  @default(false) // No change, as Boolean is a supported type in PostgreSQL.
}
